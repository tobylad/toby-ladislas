<% @posts.each do |blog_post| %>
  <article>
    <div class="article_image">
        <%= image_tag("#{blog_post.image_url}", class: "article_image") %>
    </div>
    <div class="post">
      <h1 class="title">
        <%= blog_post.title %>
      </h1>
      
      <p><%= blog_post.body %></p>

    </div>
  </article>
<% end %>

